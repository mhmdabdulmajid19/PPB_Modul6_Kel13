{
  "expo": {
    "name": "IOTWatch",
    "slug": "iotwatch-slug",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "This app needs local network access to connect to your development server."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "backendUrl": "http://192.168.43.162:5000",
      "mqtt": {
        "brokerUrl": "wss://broker.hivemq.com:8884/mqtt",
        "topic": "ppb/kel13/iot/temperature"
      },
      "supabase": {
        "url": "YOUR_SUPABASE_URL",
        "anonKey": "YOUR_SUPABASE_ANON_KEY"
      }
    },
    "plugins": [
      "expo-notifications",
      "expo-secure-store"
    ]
  }
}